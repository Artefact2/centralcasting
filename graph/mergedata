namespace HeroesOfLegend;

require __DIR__.'/../inc/root.php';

$data = [];

function merge(array &$base, array $other): void {
	foreach($base as $k => &$bv) {
		if(!isset($other[$k])) continue;
	}

	foreach($other as $k => $ov) {
		if(!isset($base[$k])) {
			$base[$k] = $ov;
			continue;
		}

		if(is_int($ov)) {
			assert(is_int($base[$k]));
			$base[$k] += $ov;
		} else if(is_string($ov)) {
			assert($base[$k] === $ov);
		} else if(is_array($ov)) {
			merge($base[$k], $ov);
		} else {
			assert(false);
		}
	}
}

if($argc === 1) {
	fprintf(STDERR, "Usage: %s <data1.json> <data2.json> â€¦\n", $argv[0]);
	die(1);
}

array_shift($argv);

while($argv !== []) {
	merge(
		$data,
		json_decode(file_get_contents(array_shift($argv)), true)
	);
	fprintf(STDERR, ".");
}

echo json_encode($data);

fprintf(STDERR, "\n");